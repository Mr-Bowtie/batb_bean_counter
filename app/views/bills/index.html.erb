<p style="color: green"><%= notice %></p>

<% content_for :title, "Bills" %>

<h1 class="title is-1">Bills</h1>

<div id="bills">
  <% @bills.each do |bill| %>
    <%= render bill %>
    <p>
      <%= link_to "Show this bill", bill %>
    </p>
  <% end %>
</div>

<%= link_to "New bill", new_bill_path, class: "button is-info" %>
